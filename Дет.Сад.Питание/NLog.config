<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">
  
  <variable name="myvar" value="myvalue"/>
  
  <targets>
    <target xsi:type="File" name="main" fileName="${basedir}/Local Data/logs/${shortdate}.log" layout="${longdate} | ${uppercase:${level}} | ${callsite} | ${message} ${newline}" />
    <target xsi:type="File" name="sketchy" fileName="${basedir}/Local Data/logs/errors/${shortdate}.log" layout="${longdate} | ${uppercase:${level}} | ${callsite} | ${message} ${newline}" />
  </targets>

  <rules>
    <logger name="*" writeTo="main" />
    <logger name="*" minlevel="Warn" writeTo="sketchy" />
  </rules>
</nlog>
